<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@color/themeBlackLight"
    app:cardElevation="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_solid_white_card"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/extraSmallText"
                android:text="0"
                android:textColor="@color/themeBlack"
                android:paddingVertical="3dp"
                android:paddingHorizontal="5dp"/>


            <TextView
                android:id="@+id/cardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="loading ..."
                android:textSize="@dimen/extraSmallText"
                android:textStyle="bold"
                android:background="@drawable/round_solid_white_card"
                android:textColor="@color/themeBlackLight"
                android:layout_gravity="start"
                android:paddingVertical="3dp"
                android:paddingHorizontal="10dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="@dimen/extraSmallText"
                android:textStyle="bold"
                android:background="@color/transparent"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:text="Date"
                android:textColor="@color/themeWhite" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/smallText"
                    android:maxLines="1"
                    android:textColor="@color/themeWhite"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="@dimen/mediumText"
                    android:autoSizeMinTextSize="@dimen/extraSmallText"
                    android:text="Confirmed :" />

                <TextView
                    android:id="@+id/confirmed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/themeWhite"
                    android:textSize="@dimen/extraLargeText"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:autoSizeMinTextSize="@dimen/mediumText"
                    android:autoSizeMaxTextSize="@dimen/hugeText"
                    android:autoSizeTextType="uniform"
                    android:text="....."
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:tint="@color/themeWhite"
                        android:layout_gravity="center"
                        android:src="@drawable/arrow_up"/>

                    <TextView
                        android:id="@+id/nconfirmed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/themeWhite"
                        android:maxLines="1"
                        android:text=" ...."
                        android:gravity="start"
                        android:textSize="@dimen/smallText"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="@dimen/mediumText"
                        android:autoSizeMinTextSize="@dimen/tinyText"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/smallText"
                    android:maxLines="1"
                    android:textColor="@color/themeYellow"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="@dimen/mediumText"
                    android:autoSizeMinTextSize="@dimen/extraSmallText"
                    android:text="Active :" />

                <TextView
                    android:id="@+id/active"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/themeYellow"
                    android:textSize="@dimen/extraLargeText"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:autoSizeMinTextSize="@dimen/mediumText"
                    android:autoSizeMaxTextSize="@dimen/hugeText"
                    android:autoSizeTextType="uniform"
                    android:text="....."
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:tint="@color/themeYellow"
                        android:layout_gravity="center"
                        android:src="@drawable/arrow_up"/>

                    <TextView
                        android:id="@+id/nactive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/themeYellow"
                        android:maxLines="1"
                        android:text=" ...."
                        android:gravity="start"
                        android:textSize="@dimen/smallText"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="@dimen/mediumText"
                        android:autoSizeMinTextSize="@dimen/tinyText"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/smallText"
                    android:maxLines="1"
                    android:textColor="@color/themeGreen"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="@dimen/mediumText"
                    android:autoSizeMinTextSize="@dimen/extraSmallText"
                    android:text="Recovered :" />

                <TextView
                    android:id="@+id/recovered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/themeGreen"
                    android:textSize="@dimen/extraLargeText"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:autoSizeMinTextSize="@dimen/mediumText"
                    android:autoSizeMaxTextSize="@dimen/hugeText"
                    android:autoSizeTextType="uniform"
                    android:text="....."
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:tint="@color/themeGreen"
                        android:layout_gravity="center"
                        android:src="@drawable/arrow_up"/>

                    <TextView
                        android:id="@+id/nrecovered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/themeGreen"
                        android:maxLines="1"
                        android:text=" ...."
                        android:gravity="start"
                        android:textSize="@dimen/smallText"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="@dimen/mediumText"
                        android:autoSizeMinTextSize="@dimen/tinyText"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/smallText"
                    android:maxLines="1"
                    android:textColor="@color/themeRed"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="@dimen/mediumText"
                    android:autoSizeMinTextSize="@dimen/extraSmallText"
                    android:text="Deceased :" />

                <TextView
                    android:id="@+id/deaths"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/themeRed"
                    android:textSize="@dimen/extraLargeText"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:autoSizeMinTextSize="@dimen/mediumText"
                    android:autoSizeMaxTextSize="@dimen/hugeText"
                    android:autoSizeTextType="uniform"
                    android:text="....."
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:tint="@color/themeRed"
                        android:layout_gravity="center"
                        android:src="@drawable/arrow_up"/>

                    <TextView
                        android:id="@+id/ndeaths"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/themeRed"
                        android:text=" ...."
                        android:maxLines="1"
                        android:gravity="start"
                        android:textSize="@dimen/smallText"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="@dimen/mediumText"
                        android:autoSizeMinTextSize="@dimen/tinyText"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>