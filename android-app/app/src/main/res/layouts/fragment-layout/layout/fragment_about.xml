<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/themeBlack"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/themeBlack"
        android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginVertical="50dp"
        android:src="@drawable/logo"/>

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/themeWhite"
        android:textStyle="bold"
        android:text="This is an UNOFFICIAL covid-19 cases tracking Application , which updates user on varying covid-19 cases worldwide and at state and district level in India "/>

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/themeOffWhite"
        android:text="The information is fetched from Freely Available Apis listed below . "/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:textColor="@color/themeWhite"
        android:text="Api : \n \n \t 1. World level Cases : https://api.covid19api.com \n\n \t 2. India : https://api.covid19india.org"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:gravity="left"
        android:text="Features : "/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:textColor="@color/themeWhite"
        android:text="1. Monitors Covid 19  cases worldwide and country wise \n2. In depth Details in India at State and District level \n3. Provides count of Confirmed , Active , Recovered , Deceased Patients .\n4. Case Timeline of all Countries "/>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="@dimen/extraLargeText"
        android:textColor="@color/themeGreen"
        android:text="Stay Home Stay Safe"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:gravity="left"
        android:textColor="@color/themeBlackLight"
        android:text="This Project is build and maintained by Mayank Patel "/>

    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>
